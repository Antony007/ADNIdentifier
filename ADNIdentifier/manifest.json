{
  "manifest_version": 2,
  "name": "ADNIdentifier",
  "externally_connectable": {
    "ids": ["*"],
    "matches": [
      "http://*.dev.localhost:4200/*"
    ]
  },
  "description": "This extension provides you with a unique client ID",
  "version": "0.5",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" 
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Generate ID"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
	"storage",
  	"tabs"
  ]
}
